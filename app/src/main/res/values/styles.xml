<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Register display chip -->
    <style name="RegStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFAA00</item>
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@drawable/reg_bg</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <!-- Machine control button (PWR RST RUN HLT STP) -->
    <style name="PanelBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:backgroundTint">#1C1C1C</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- Demo selector button -->
    <style name="DemoBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#224488</item>
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:backgroundTint">#06060E</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- D-Pad directional button — NO weight (set in layout) -->
    <style name="DpadBtn">
        <item name="android:textColor">#44AA55</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#0A180A</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Action button (A B C D) — NO weight (set in layout) -->
    <style name="ActionBtn">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>
